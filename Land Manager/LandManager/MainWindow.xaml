<Window x:Class="LandManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandManager"
        mc:Ignorable="d"
        Title="Land Manager" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="507" Background="#FFECECEC">
            <MenuItem x:Name="mainFileButton" Header="File" Margin="0" Width="42">
                <MenuItem x:Name="addPlotButton" Header="Add Plot" HorizontalAlignment="Left" Width="91" Click="AddPlot_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
